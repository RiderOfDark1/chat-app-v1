# Ignore node_modules in both frontend and backend
client/node_modules/
server/node_modules/

# Ignore .next build folder in frontend (Next.js)
client/.next/

# Ignore build/output directories in backend (Node.js)
server/dist/
server/build/
server/out/

# Ignore log files in both frontend and backend
**/npm-debug.log*
**/yarn-debug.log*
**/yarn-error.log*
**/pnpm-debug.log*

# Ignore environment files in both frontend and backend
client/.env
client/.env.local
client/.env.development.local
client/.env.test.local
client/.env.production.local
server/.env
server/.env.local
server/.env.development.local
server/.env.test.local
server/.env.production.local

# Ignore OS files in both frontend and backend
**/.DS_Store
**/Thumbs.db

# Ignore IDE-specific files
**/.idea/
**/.vscode/
**/*.suo
**/*.ntvs*
**/*.njsproj
**/*.sln

# Ignore lock files (optional, depending on your workflow)
client/package-lock.json
client/yarn.lock
client/pnpm-lock.yaml
server/package-lock.json
server/yarn.lock
server/pnpm-lock.yaml

# Ignore miscellaneous files
**/*.log
**/*.bak
**/*.swp
**/*.tmp
**/*.temp
